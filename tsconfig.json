{
  "extends": "@apify/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleDetection": "force",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts" // Adjust this to match your source file structure
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts" // Exclude test files if needed
  ]
}
